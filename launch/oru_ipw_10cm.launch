<launch>
  <master auto="start"/>
  <param name="/use_sim_time" value="true"/>

  <!-- <include file="$(find navigation_stage)/move_base_config/move_base.xml"/> -->
  <include file="$(find oru_ipw_navigation)/launch/navigation.launch">
    <arg name="hrp_ns" value="" />
  </include>

  <node name="map_server" pkg="map_server" type="map_server"
        args="$(find navigation_stage)/stage_config/maps/willow-full.pgm 0.1"
        respawn="false" />
  <node pkg="stage_ros" type="stageros" name="stageros"
        args="$(find oru_ipw_stage)/stage_config/worlds/willow-hrp.world"
        respawn="false">
    <param name="base_watchdog_timeout" value="0.2"/>
  </node>

  <include file="$(find oru_ipw_launch)/launch/mcl_2d.launch">
    <arg name="sensor_topic" value="/base_scan" />
    <arg name="output" value="log" />
  </include>

  <node name="rviz" pkg="rviz" type="rviz" args="-d $(find oru_ipw_stage)/rviz/hrp.rviz" />
</launch>
